    <style name="circleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="userNameText">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textStyle">bold</item>
